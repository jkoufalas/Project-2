<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>codeIt</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header
        class="inline-flex justify-between w-full h-32 bg-slate-500 border-b-4 border-double border-slate-300 text-zinc-300"
      >
        <nav class="nav self-center inline-flex w-full justify-start p-5">
          <!-- Conditionally render login or logout links -->
          <button class="no-button m-2" id="home">Home</button>
          <button class="no-button m-2" id="categories">Categories</button>
          {{#if logged_in}}
            {{!-- Delete Profile button??? For future development --}}
            {{!-- <button class="no-button m-2" id="profile">Profile</button> --}}
            <button class="no-button m-2" id="logout">Logout</button>
          {{else}}
          <button class="no-button m-2" id="login">Login</button>
          {{/if}}
        </nav>
      </header>
      <main class="m-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>
        {{!-- Add footer??? --}}
      </footer>
    </div>

    <script src="/js/navigation.js"></script>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>