{{> sidebar}}


<!-- Loop over each object in the projects array -->
<div class="row m-4 project w-full">
  <div class="threads-span">
    <div class="justify-center inline-flex w-full">
          <p class="font-mono pl-2 text-3xl font-bold tracking-tight text-bg-gray-800" id="category-id" category="{{cat.id}}">
        {{cat.category_name}}
      </p>
    </div>
    <div class="inline-flex w-full flex-wrap justify-center">
      {{#each threads as |thread|}}
        <div
        class="p-6 m-4 max-w-sm rounded-lg border border-gray-200 shadow-md bg-gray-800"
      >
        <h5
          class="font-mono mb-2 text-xl font-bold tracking-tight text-white"
        >{{thread.thread_name}}</h5>
        <p class="font-mono mb-3 text-sm font-normal text-gray-400">Created By:
          {{thread.user.name}}
          on
          {{format_date thread.date_created}}</p>
        <button
          class="font-mono inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-800"
          id="{{thread.id}}"
          >
          Read more
          <svg
            aria-hidden="true"
            class="ml-2 -mr-1 w-4 h-4"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          ><path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path></svg>
          </button>
        </div>
      {{/each}}
    </div>
  </div>

{{#if logged_in}}
<div class="row m-4 project w-full">

      <form class="form thread-form justify-center inline-flex w-full">
        <div class="form-group w-9/12">
          <input
            class="form-input h-10 w-full border border-gray-200 shadow-md"
            type="text"
            placeholder="Create new thread..."
            id="new-thread"
          />
        </div>
        <div class="form-group w-3/12">
          <button
            class="w-full bg-slate-500 hover:bg-slate-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline btn btn-primary"
            type="submit"
          >Create</button>
        </div>
      </form>
  {{/if}}
</div>

<script src="../js/threads.js"></script>