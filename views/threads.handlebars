{{> sidebar}}


<!-- Loop over each object in the projects array -->
<div class="threads-span row m-4 project w-full">
  <div class="justify-center inline-flex w-full">
        <p class="pl-2 text-5xl font-bold tracking-tight text-bg-gray-800">
      {{threads.0.category.category_name}}
    </p>
  </div>
  <div class="inline-flex w-full flex-wrap">
    {{#each threads as |thread|}}

      <div
        class="p-6 m-4 max-w-sm rounded-lg border border-gray-200 shadow-md bg-gray-800"
      >
        <h5
          class="mb-2 text-2xl font-bold tracking-tight text-white"
        >{{thread.thread_name}}</h5>
        <p class="mb-3 font-normal text-gray-400">Created By:
          {{thread.user.name}}
          on
          {{format_date thread.date_created}}</p>
        <button
          class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-800"
          id="{{thread.id}}"
        >
          Read more
          <svg
            aria-hidden="true"
            class="ml-2 -mr-1 w-4 h-4"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          ><path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path></svg>
        </button>
      </div>
    {{/each}}
  </div>
</div>

<script src="../js/threads.js"></script>