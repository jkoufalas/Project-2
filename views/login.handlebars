<div class="inline-flex justify-center w-full p-6 row">
  <div class="w-1/5 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="mb-4 form-group">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="email-login">email:</label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline form-input" type="text" id="email-login" />
      </div>
      <div class="mb-6 form-group">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password-login">password:</label>
        <input class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="bg-slate-500 hover:bg-slate-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="w-1/5 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 ml-6 col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="mb-4 form-group">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="name-signup">name:</label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="email-signup">email:</label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password-signup">password:</label>
        <input class="mb-3 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="bg-slate-500 hover:bg-slate-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
