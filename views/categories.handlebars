{{> sidebar}}

{{! print list of categories }}

<div class="category-span w-full">
  <p class="text-3xl justify-center text-center font-bold pt-5 font-mono">
    Categories
  </p>
  <div class="inline-flex w-full flex-wrap justify-center">
    {{! cycle through each category and print card for each }}
    {{#each categories as |category|}}

      <div
        class="p-6 m-4 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700"
      >
        <h5
          class="font-mono mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
        >{{category.category_name}}</h5>
        {{! setup button to link to thread }}
        <button
          class="font-mono inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          id="{{category.id}}"
        >
          Read more
          <svg
            aria-hidden="true"
            class="ml-2 -mr-1 w-4 h-4"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          ><path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path></svg>
        </button>
      </div>

    {{/each}}
  </div>

{{! if logged in allow user to create thread by going to new category page }}
  {{#if logged_in}}
    <div class="font-mono inline-flex w-full flex-wrap justify-center">
      <button
        class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        id="new-category"
      >
        Add category
      </button>
    </div>
  {{/if}}
</div>

<script src="./js/categories.js"></script>